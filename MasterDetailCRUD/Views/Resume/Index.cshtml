@model IEnumerable<MasterDetailCRUD.Models.Applicant>

@{
    ViewData["Title"] = "Index";
}

<style>
    .avatar {
        vertical-align: middle;
        width: 40px;
        height40px;
        border-radius: 50%;
    }

</style>

@* <h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-lg btn-outline-success">Crear Nuevo</a>
</p> *@

<div class="container btn-group">
    <div class="col-10">
        <div class="h1">Applicants</div>
    </div>

    <div class="col-2 btn-group justify-cotent-end p-3">
        <a asp-action="Create" class="btn btn-sm btn-success">Create New</a>
    </div>
</div>

<table class="table table-sm table-hover">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalExperiencie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src = "~/image/@item.PhotoUrl" alt = "" class="avatar"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalExperiencie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
